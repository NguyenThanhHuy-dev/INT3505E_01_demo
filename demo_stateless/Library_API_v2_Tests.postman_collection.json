	"item": [
		{
			"name": "Register user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", () => {",
							"  pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Response has user id\", () => {",
							"  const json = pm.response.json();",
							"  pm.expect(json.user.id).to.exist;",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Tạo email ngẫu nhiên mỗi lần chạy",
							"let timestamp = new Date().getTime();",
							"pm.environment.set(\"email\", `testuser_${timestamp}@example.com`);",
							"pm.environment.set(\"name\", \"Test User\");",
							"pm.environment.set(\"password\", \"123456\");",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{name}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "{{base_url}}/auth/register"
			},
			"response": []
		},
